{
  "name": "@cordxapp/api",
  "version": "4.2.0-beta.2",
  "description": "The official restful api for the cordx services",
  "main": "./src/index.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "dev": "nodemon --exec npx ts-node ./src/clients/discord.client.ts",
    "start": "npx ts-node ./src/clients/discord.client.ts",
    "test": "npm run test -- --watchAll"
  },
  "keywords": [
    "CordX",
    "ShareX"
  ],
  "license": "LGPL-3.0-only",
  "author": {
    "name": "Infinity Development",
    "url": "https://api.cordx.lol"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "url": "https://github.com/CordXApp/API"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.400.0",
    "@fastify/auth": "^2.0.0",
    "@fastify/bearer-auth": "^7.0.0",
    "@fastify/cors": "^7.0.0",
    "@fastify/rate-limit": "6.0.1",
    "axios": "^1.4.0",
    "boom": "^7.3.0",
    "cookie": "^0.6.0",
    "cryptr": "^6.3.0",
    "dayjs": "^1.11.10",
    "discord.js": "^14.12.1",
    "dotenv": "^8.2.0",
    "fastify": "^2.15.3",
    "fastify-oas": "^2.7.0",
    "mongoose": "^8.0.2",
    "nodemon": "^3.0.2"
  },
  "devDependencies": {
    "@cordxapp/instatus": "0.2.0",
    "@cordxapp/pastes": "0.2.0",
    "@cordxapp/request": "0.2.0",
    "@semantic-release/git": "^10.0.1",
    "@types/boom": "^7.3.0",
    "@types/node": "^20.10.2",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "all-contributors-cli": "^6.26.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "git-rev-sync": "^3.0.1",
    "ioredis": "5.3.2",
    "prettier": "^1.19.1",
    "serverless-mysql": "1.5.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx}": [
      "eslint ./src --fix",
      "prettier -w ./src"
    ]
  },
  "release": {
    "branches": [
      {
        "name": "prod",
        "prerelease": false
      },
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/github",
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}