{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDirs": [
      "src",
      "."
    ],
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "root/*": [
        "src/*"
      ],
      "clients": [
        "src/clients/*"
      ],
      "configs/*": [
        "src/settings/*"
      ],
      "controllers/*": [
        "src/controllers/*"
      ],
      "routes": [
        "src/routes/*"
      ],
      "services/*": [
        "src/services/*"
      ],
      "typings/*": [
        "src/@types/*"
      ],
      "models/*": [
        "src/models/*"
      ]
    },
    "noImplicitAny": false,
    "lib": [
      "es6"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}